{% extends 'story.tmpl' %}

{% block content_header %}
    <div class="title-block post-format-icon-pin">
	<div class="entry-meta">
	    <span class="posted-on">
		Posted on <a href="{{ post.permalink() }}" rel="bookmark">{{ post.formatted_date(date_format)|e }}</a>
	    </span>
	</div>
	<h1>{{ post.title()|e }}</h1>
    </div>
{% endblock %}

{% block early_js %}
{{ mathjax_config }}
{% endblock %}

{% block late_js %}
<script src="/assets/js/mastodon-share.js"/>
{% endblock %}

{% block content_tags %}
{% if post.tags %}
    <div class="site-content navigation-post">
	<div class="tag-head">Tags</div>
	<div class="tag-list">
	    {% for tag in post.tags %}
		<a href="{{ _link('tag', tag) }}">{{ tag|e }}</a>
		{% if not loop.last %}
		    <span>  </span>
		{% endif %}
	    {% endfor %}
	</div>
    </div>
{% endif %}
{% endblock %}

{% block content_social %}
  <div class="site-content">
    <div class="social">
      <ul>
	<li><a onclick="MastodonShare(this);"
	data-src="{{post|taggedtitle|urlencode}}&url={{abs_link(post.permalink())}}"><span title="Share on Mastodon"><i class="fab fa-mastodon"/></span></a></li>
	<li><a href="https://twitter.com/share?text={{post|taggedtitle|urlencode}}&url={{abs_link(post.permalink())}}" target="_blak"><span title="Share on Twitter"><i class="fab
	fa-twitter"/></span></a></li>
	<li><a href="https://www.reddit.com/submit?url={{abs_link(post.permalink())}}&title={{post|taggedtitle|urlencode}}" target="_blank"><span title="Share on Reddit"><i class="fab fa-reddit"/></span></a></li>
	<li><a href="https://www.linkedin.com/shareArticle?url={{abs_link(post.permalink())}}&source={{abs_link("/")}}" target="_blank"><span title="Share on LinkedIn"><i class="fab fa-linkedin"/></span></a></li>
	<li><a href="mailto:?subject={{post.title()|e}}&body={{abs_link(post.permalink())}}"><span title="Share by email"><i class="fa fa-envelope"/></span></a></li>
      </ul>
    </div>
  </div>
{% endblock %}

{% block bottom_nav_links %}
<nav class="site-content navigation-post" role="navigation">
    {% if post.prev_post %}
	<div class="previous">
	    <a href="{{ post.prev_post.permalink() }}" rel="prev">
		<span class="meta-nav">Older Post</span>{{ post.prev_post.title()|e }}
	    </a>
	</div>
    {% else %}
	<div class="previous">
	    <a href="/" rel="prev" onclick="return false;">
		<span class="meta-nav">No More Older Posts</span>{#  #}
	    </a>
	</div>
    {% endif %}
    {% if post.next_post %}
	<div class="next">
	    <a href="{{ post.next_post.permalink() }}" rel="next">
		<span class="meta-nav">Newer Post</span>{{ post.next_post.title()|e }}
	    </a>
	</div>
    {% endif %}
</nav>
{% endblock %}
