{% extends 'story.tmpl' %}

{% block content_header %}
    <div class="title-block post-format-icon-pin">
	<h1>{{ post.title()|e }}</h1>
    </div>
{% endblock %}

{% block content_tags %}
{% if post.tags %}
    <div class="site-content navigation-post">
	<div class="tag-head">Tags</div>
	<div class="tag-list">
	    {% for tag in post.tags %}
		<a href="{{ _link('tag', tag) }}">{{ tag|e }}</a>
		{% if not loop.last %}
		    <span>  </span>
		{% endif %}
	    {% endfor %}
	</div>
    </div>
{% endif %}
{% endblock %}


{% block bottom_nav_links %}
{% endblock %}
